{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-10 ml-md-auto">
                <div class="card bg-light mb-3 mt-5" style="width: 800px">
                    <div class="card-body">
                        <form class="form-horizontal" role="form" method="post">
                            {% for flashSuccess in app.flashes('success') %}
                                <div class="alert alert-success" role="alert">{{ flashSuccess }}</div>
                            {% endfor %}
                            {% for flashError in app.flashes('verify_email_error') %}
                                <div class="alert alert-danger" role="alert">{{ flashError }}</div>
                            {% endfor %}
                            <div class="card-header mb-3">Registration Form</div>
                            {{ form_start(registrationForm) }}
                            <div class="form_group">
                                <div class="row ml-md-auto ml-md-auto">
                                    <div class="col-md-6 mb-3">
                                        {{ form_row(registrationForm.firstname, {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        {{ form_row(registrationForm.lastname, {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                </div>
                            </div>
                            <div class="form_group">
                                <div class="col-md-12 mb-3">
                                    {{ form_row(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>
                            <div class="form_group">
                                <div class="col-md-12 mb-3">
                                    {{ form_row(registrationForm.password.first, {'attr': {'class':
                                        'form-control'}}) }}
                                </div>
                            </div>
                            <div class="form_group">
                                <div class="col-md-12 mb-3">
                                    {{ form_row(registrationForm.password.second, {'attr': {'class':
                                        'form-control'}}) }}
                                </div>
                            </div>
                            <div class="form_group">
                                <div class="col-md-12 mb-3">
                                    {{ form_row(registrationForm.agreeTerms, {'attr': {'class':
                                        'form-control'}}) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-8 col-md-offset-4" style="margin-top:5px;">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fa fa-btn fa-user"></i> Register
                                    </button>
                                </div>
                            </div>
                            {{ form_end(registrationForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}